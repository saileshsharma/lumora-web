# Frontend Environment Variables
# Copy this to .env.local for local development

# Backend API URL
# For local development, leave empty to use localhost:5001
# For production, set to your Railway backend URL
VITE_API_URL=

# ============================================================================
# KEYCLOAK CONFIGURATION
# ============================================================================

# Keycloak Server URL
# Local development: http://localhost:8080
# Production: https://keycloak.your-domain.com
VITE_KEYCLOAK_URL=http://localhost:8080

# Keycloak Realm Name
VITE_KEYCLOAK_REALM=lumora

# Frontend Client ID (public client)
VITE_KEYCLOAK_CLIENT_ID=lumora-frontend
